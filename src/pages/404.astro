---
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import { LOST_404 } from "@consts";
---

<PageLayout title={LOST_404.TITLE} description={LOST_404.DESCRIPTION}>
  <Container>
    <div class="animate">
      <div class="animate font-semibold text-black dark:text-white text-2xl">
        UH OH...
      </div>
      <section >
        <article>
          <p class="animate">
            Looks like you're lost... Let's get you back <a href="/">home.</a>
          </p>
          <p>
            <img src="https://cdn.twaites.com/site/404-error.jpeg" alt="404 Image" class="animate img-special" />
          </p>
        </article>
      </section>
    </div>
  </Container>
</PageLayout>
